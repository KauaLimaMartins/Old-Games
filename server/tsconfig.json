{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@configs/*": ["./src/configs/*"],
      "@src/*": ["./src/*"],
      "@controllers/*": ["./src/app/controllers/*"]
    },
    "lib": ["ES6"],
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  },
  "include": ["./src/**/*"]
}
